<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#273f52"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@mipmap/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences View"
            android:id="@+id/txt_pref"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Book Name"
            android:id="@+id/textView3"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book"
            android:background="#ffffff"
            android:layout_toRightOf="@+id/textView5"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:maxLength="70"
            android:hint="Max. 70 Characters"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Book Author"
            android:id="@+id/textView5"
            android:layout_below="@id/textView3"
            android:textColor="#ffffff"
            android:padding="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author"
            android:background="#ffffff"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignRight="@+id/book"
            android:layout_alignEnd="@+id/book"
            android:layout_below="@+id/book"
            android:layout_alignLeft="@+id/book"
            android:layout_alignStart="@+id/book"
            android:maxLength="70"
            android:hint="Max. 70 Characters"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/textView5"
            android:id="@+id/textView6"
            android:padding="20dp"
            android:paddingRight="40dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/author"
            android:layout_alignStart="@+id/author"
            android:layout_below="@+id/author"
            android:layout_alignRight="@+id/author"
            android:layout_alignEnd="@+id/author"
            android:layout_alignParentBottom="true"
            android:inputType="textMultiLine"
            android:maxLength="255"
            android:hint="Max. 255 Characters"
            android:textSize="14dp"
            android:gravity="top" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btn_pref_save"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:onClick="onClickSave" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btn_pref_close"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="59dp"
            android:layout_marginEnd="59dp"
            android:onClick="onClickCancel" />

    </RelativeLayout>

</LinearLayout>